<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chat Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Chat Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="https://pradipkumarraushan.ml" target="_blank">Developed By - Pradip Kumar Raushan</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Chat Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--Start Footer -->
    <footer style="background-color: black;" class="container-fluid text-center">
        <br>
        <p style="font-size:18px;color: white;">Find me on social media.</p>
        <a title="Facebook" href="https://www.facebook.com/pradipkumarraushan" target="_blank"><i class="fa fa-facebook-official Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <a title="Instagram" href="https://www.instagram.com/pradipkumarraushan" target="_blank"><i class="fa fa-instagram Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <a title="Twitter" href="https://twitter.com/pradip_raushan" target="_blank"><i class="fa fa-twitter Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <a title="Linkedin" href="https://in.linkedin.com/in/pradipkumarraushan" target="_blank"><i class="fa fa-linkedin Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <a title="GitHub" href="https://www.github.com/pradipkumarraushan" target="_blank"><i class="fa fa-github Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <!-- Copyright -->
        <div style="font-size:18px;color: white;" class="">
            <br />
            Copyright ©
            <script>document.write(new Date().getFullYear());</script> :
            <a style="color: white" href="https://pradipkumarraushan.ml" target="_blank"> Pradip Kumar Raushan</a>
        </div>
        <!-- Copyright -->
        <br><br>
    </footer>
    <!--End Footer -->
    <img src="" width="1" height="1" id="view" />
   <script src="~/Scripts/vistor.js"></script>
</body>
</html>
